        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button HorizontalAlignment="Left" Margin="327,236,0,0" VerticalAlignment="Top" Height="35" Width="85" Content="XAML Button"/>

        <Button>
            <Button.Width>200</Button.Width>
            <Button.Height>200</Button.Height>
            <Button.Content>
                <WrapPanel>
                    <TextBlock Text="Panel 1"
